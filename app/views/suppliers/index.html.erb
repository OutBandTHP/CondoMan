<% provide(:title, 'ניהול ספקים') %>
<div class="center-block">
  <h1>ספקים בפרוייקט <%= "#{@project.name}" %></h1>
 
  <div class="col-md-8">
    <div id="table-wrapper">
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr class="heading">
            <th style="text-align:right">שם הספק</th>
            <th style="text-align:right">איש קשר</th>
            <th style="text-align:right">מייל</th>
            <th style="text-align:right">טלפון</th>
            <th style="text-align:right">סעיף חיוב</th>
          </tr>
        </thead>
        <tbody>
          <%= render @suppliers %>
        </tbody>
      </table>
    </div>
  </div>
 </div>
<div class="center">
  <%= link_to 'צור ספק חדש', new_supplier_path, class: 'btn btn-primary' %>
</div>