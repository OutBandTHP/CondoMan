<%= form_for(@book) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, 'שם הספר' %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label 'סוג הספר' %>
  <%= f.select :kind, Book.group.collect { |p| p } %>

  <%= f.label 'שייך לקבוצה' %>
  <%= f.select :group_id, @groups.collect { |p| [ p.name, p.id ] }, { include_blank: true } %>
  
  <%= f.submit 'בצע', class: 'btn btn-primary' %>
<% end %>
