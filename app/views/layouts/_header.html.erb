<header class='navbar navbar-fixed-top navbar-inverse'>
  <div class='container-fluid'>
    <div class='navbar-header'>
      <div class='navbar-brand'>
        <%= link_to 'CondoMan', root_path, id: 'logo' %>
      </div>
      <button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#mainMenu'>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </button>
    </div>
    <div class='collapse navbar-collapse' id='mainMenu'>
      <ul class='nav navbar-nav' id='mainMenu'>
        <li><%= link_to 'Home',   root_path  %></li>
        <li><%= link_to 'Help',   help_path  %></li>
        <% if logged_in? %>
          <% unless current_user.is_tenant? %>
            <li class='dropdown'>
              <a class='dropdown-toggle' data-toggle='dropdown' href='#'>Admin
              <span class='caret'></span></a>
              <ul class='dropdown-menu' role='menu'>
                <% if current_user.is_sysadmin? %>
                  <li><%= link_to 'Create new Project',      new_project_path  %></li>
                  <li><%= link_to 'Add Building to project', '#'  %></li>
                <% end %>
                <li><%= link_to 'Manage Project',  edit_project_path(current_user) %></li>
                <li><%= link_to 'Manage Building', '#' %></li>
                <li class='divider'></li>
                <li><%= link_to 'Add new User',     new_user_path  %></li>
                <li><%= link_to 'Manage Users',     users_path  %></li>
                <li class='divider'></li>
                <li><%= link_to 'Add new Tenants',   '#' %></li>
                <li><%= link_to 'Manage Tenants',   '#' %></li>
              </ul>
            </li>
          <% end %>
        <% end %>
      </ul>
      <ul class='nav navbar-nav navbar-right'>
        <% if logged_in? %>
          <li class='dropdown'>
            <a class='dropdown-toggle' data-toggle='dropdown' href='#'>Profile
            <span class='caret'></span></a>
            <ul class='dropdown-menu' role='menu'>
              <li><%= link_to 'Edit Profile',  edit_user_path(current_user)  %></li>
              <li class='divider'></li>
              <li>
                <%= link_to(logout_path, method: :delete) do %>
                  Logout <span class='glyphicon glyphicon-log-out'></span>
               <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to(login_path) do %>
              <span class='glyphicon glyphicon-log-in'></span> Login
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
