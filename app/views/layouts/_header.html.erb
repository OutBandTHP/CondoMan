        <li><%= link_to 'Home',   root_path  %></li>
        <li><%= link_to 'Help',   help_path  %></li>
        <% if logged_in? %>
          <%= render 'layouts/menu_admin' %>
          <%= render 'layouts/menu_maintenance' %>
          <%= render 'layouts/menu_finance' %>
