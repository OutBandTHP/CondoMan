<% provide(:title, 'Units') %>
<div class="center-block">
  <h1>Units<%= " of #{@project.name}" %></h1>

  <%= will_paginate %><br>
  
  <div class="col-md-8">
    <h4>There are <%= @project.units.count %> units in this Project</h4>
      <table class="table table-hover">
        <thead>
          <tr class="heading">
            <td>Unit #</td>
            <td>Building</td>
            <td>Floor</td>
            <td>Since</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <%= render @units %>
      </table>
  </div>
 </div>
