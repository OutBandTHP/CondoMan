<%= form_for(@unit) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :building %>
  <%= f.collection_select :building, @unit.project.buildings, :id , :id_code, class: 'form-control' %>

  <%= f.label :floor %>
  <%= f.number_field :floor, class: 'form-control' %>

  <%= f.label :since, 'Start Activity Date' %>
  <%= f.date_field :since, class: 'form-control' %>
  
  <%= f.submit 'Save Changes', class: 'btn btn-primary' %>
<% end %>
