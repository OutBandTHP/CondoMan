<%= form_for(@unit) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :building, 'בניין' %>
  <%= f.collection_select :building, @unit.project.buildings, :id , :id_code, class: 'form-control' %>

  <%= f.label :floor, 'קומה' %>
  <%= f.number_field :floor, class: 'form-control' %>

  <%= f.label :area, 'שטח' %>
  <%= f.number_field :area, step: '0.1', class: 'form-control' %>

  <%= f.label :since, 'החל מתאריך' %>
  <%= f.date_field :since, class: 'form-control' %>

  <%= f.label :payer, 'משלם' %>
  <%= f.text_field :payer, class: 'form-control' %>
  
  <%= f.submit 'בצע', class: 'btn btn-primary' %>
<% end %>
