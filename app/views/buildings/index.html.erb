<% provide(:title, 'Buildings') %>
<div class="center-block">
  <h1>Buildings<%= " of #{@project.name}" %></h1>

  <%= will_paginate %><br>

  <div class="col-md-8">
    <h4>There are <%= @project.buildings.count %> buildings in this Project</h4>
      <table class="table table-hover">
        <thead>
          <tr class="heading">
            <td>Building ID</td>
            <td>Address</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <%= render @buildings %>
      </table>
  </div>
