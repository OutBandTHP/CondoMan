<%= form_for(@notification) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :text_message, 'גוף ההודעה' %>
  <%= f.text_area :text_message, rows: 2, cols: 60, class: 'form-control' %>

  <%= f.label :valid_from, 'פעיל החל מתאריך:' %>
  <%= f.date_field :valid_from, class: 'form-control' %>

  <%= f.label :valid_to, 'פעיל עד תאריך' %>
  <%= f.date_field :valid_to, class: 'form-control' %>

  <%= f.label 'רק עבור פרוייקט' %>
  <%= f.select :project_id, Project.all.collect { |p| [ p.name, p.id ] }, { include_blank: true } %>
  
  <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
<% end %>
