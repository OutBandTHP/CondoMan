<li>
  <%= gravatar_for user, size: 40 %>
  <%= link_to user.name, user %>
  <% if current_user.manages?(user.authority) && !current_user?(user) %>
    | <%= link_to 'delete', user, method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
  <p><%= user.email %>, <%= User.user_types.index(user.authority) %></p>
</li>
